<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create-playlist-bookmarks-table" author="bnyro">
        <createTable tableName="playlist_bookmarks">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="playlist_id" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(200)"/>
            <column name="short_description" type="VARCHAR(300)"/>
            <column name="thumbnail_url" type="VARCHAR(300)"/>
            <column name="uploader" type="VARCHAR(100)"/>
            <column name="uploader_url" type="VARCHAR(100)"/>
            <column name="uploader_avatar" type="VARCHAR(150)"/>
            <column name="video_count" type="BIGINT"/>
            <column name="owner" type="BIGINT">
                <constraints nullable="false" referencedColumnNames="id" referencedTableName="users" foreignKeyName="id"/>
            </column>
        </createTable>

        <createIndex indexName="playlist_bookmarks_playlist_id_idx" tableName="playlist_bookmarks">
            <column name="playlist_id"/>
        </createIndex>

        <createIndex indexName="playlist_bookmarks_owner_idx" tableName="playlist_bookmarks">
            <column name="owner"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>